<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="title_box">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@color/orange</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="header_box">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@color/orange</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="synchronization_list">
        <item name="android:textSize">12dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="heading_string_size">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="textview_string_size">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="table_column_type">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/orange</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="table_edittext_type">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/apptheme_edit_text_holo_light</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="table_edittext_type_header_fa">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:background">@drawable/apptheme_edit_text_holo_light</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="button_coaching_option">
        <item name="android:textSize">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="next_button">
        <item name="android:textSize">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/orange</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="next_button_1">
        <item name="android:text">Next</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/orange</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="back_button">
        <item name="android:textSize">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/orange</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="image_page">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:src">@drawable/logoufs</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="image_sync_page">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:src">@drawable/logoufs</item>
    </style>

    <style name="date_coaching">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="sub_page_coaching">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/orange</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="column_customer_header">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="column_customer_header_fa">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="textview_question">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="dsr_saat_question">
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dsr_saat_radio">
        <item name="android:button">@drawable/apptheme_btn_radio_holo_light</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#6E6E6E</item>
        <item name="android:layout_width">0px</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
    </style>

    <style name="text_questions">
        <item name="android:textSize">15dp</item>
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.7</item>
    </style>

    <style name="tick_questions">
        <item name="android:textSize">15dp</item>
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="radio_questions">
        <item name="android:button">@drawable/apptheme_btn_radio_holo_light</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.3</item>
    </style>

    <style name="remarks">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
        <item name="android:background">@drawable/apptheme_edit_text_holo_light</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="RadioButtonAppTheme" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/apptheme_btn_radio_holo_light</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="radio_dsr_saat" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/apptheme_btn_radio_holo_light</item>
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="fa_box">
        <item name="android:text">Isi</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_width">0px</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">1dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="fa_question_title">
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="fa_question">
        <item name="android:textSize">15dp</item>
        <item name="android:layout_width">0px</item>
        <item name="android:layout_weight">0.8</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="fa_radio">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@drawable/apptheme_btn_radio_holo_light</item>
    </style>

    <style name="fa_edittext">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:textSize">12dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/apptheme_edit_text_holo_light</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="multiline_summary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:lines">3</item>
        <item name="android:gravity">top|left</item>
        <item name="android:background">@drawable/apptheme_edit_text_holo_light</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>
</resources>
