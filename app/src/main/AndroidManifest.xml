<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="unilever.coachingform">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".MainApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SynchronizationActivity"
            android:label="@string/title_activity_synchronization"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CoachingOption"
            android:label="@string/title_activity_coaching_option"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MerchandiserActivity"
            android:label="@string/title_activity_merchandiser"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DSRSebelumActivity"
            android:label="@string/title_activity_dsr"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DSRSaatActivity"
            android:label="@string/title_activity_dsrsaat"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".DSRSetelahActivity"
            android:label="@string/title_activity_dsrsetelah"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CoachingSummaryActivity"
            android:label="@string/title_activity_coaching_summary"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RSMCoachingActivity"
            android:label="@string/title_activity_rsmcoaching"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CoacheeHistoryActivity"
            android:label="@string/title_activity_coachee_history"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>